import pymysql

def getPrices(s_name):
    # MySQL Connection 연결
    conn = pymysql.connect(host='localhost', user='root', password='python',
                           db='python', charset='utf8')
     
    curs = conn.cursor()   # 자바에서 statement와 같은 역할이다
     
    sql = """
            SELECT s_code,
                     s_name,
                     s_price,
                     in_date
            FROM stock
            WHERE s_name = '삼성전자'
        """
    curs.execute(sql)
    
    
    rows = curs.fetchall()
    # print(rows[0][0])    
    
    arr = []
    for i in rows:
        arr.append(i[2])
    
    conn.close()
    return arr
    
if __name__ == '__main__':
    arr = getPrices("LG")
    print("LG",arr)
    arr = getPrices("삼성전자")
    print("삼성전자",arr)
    arr = getPrices("SK")
    print("SK",arr)
    