			pstmt.setString(i++, member.getMem_like());
			pstmt.setString(i++, member.getMem_memorial());
			pstmt.setString(i++, member.getMem_memorialday());
			return pstmt.executeUpdate();
		} catch (SQLException e) {
			throw new RuntimeException(e);
		}
		
		
		
		
		
		
		
